<h3>スケジュール新規登録</h3>

<%= form_with model:@user do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :startdate ,"開始日" %></th>
            <td><%= f.date_field :startdate %></td>
        </tr>
        <tr>
            <th><%= f.label :enddate ,"終了日" %></th>
            <td><%= f.date_field :enddate %></td>
        </tr>
        <tr>
            <th><%= f.label :allday ,"終日" %></th>
            <td><%= f.check_box :allday%> 終日の場合はチェックを入れます </td>
        </tr>
        <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo, class:"post-coment" %></td>
        </tr>
    </table>
    
    <div>
        <ul>
            <li><%= f.submit "スケジュールを編集する",class:"post-new"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :users %></li>
        </ul>
    </div>
<% end %>
